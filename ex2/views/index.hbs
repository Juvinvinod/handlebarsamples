<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <h1>{{title}}</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Item</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</body>

</html>